<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mypageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="159dp"
        android:text="마이페이지"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/logout"
        app:layout_constraintStart_toEndOf="@+id/mypageProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/mypageTitle" />

    <TextView
        android:id="@+id/mypageClassGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="학번/학년반"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/my_infButton"
        app:layout_constraintTop_toBottomOf="@+id/mypageName" />

    <Button
        android:id="@+id/my_infButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#ffffff"
        android:stateListAnimator="@null"
        android:text="정보수정"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/mypageWrote"
        app:layout_constraintEnd_toEndOf="@+id/logout"
        app:layout_constraintStart_toStartOf="@+id/mypageProfilePicture"
        app:layout_constraintTop_toTopOf="@+id/mypageProfilePicture" />

    <Button
        android:id="@+id/logout"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="93dp"
        android:backgroundTint="#ffffff"
        android:stateListAnimator="@null"
        android:layout_marginLeft="-17dp"
        android:layout_marginTop="132dp"
        android:background="#00ff0000"
        android:text="로그아웃"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/my_infButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mypageName" />

    <TextView
        android:id="@+id/mypageWrote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="내가 쓴 글"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypageProfilePicture" />

    <TextView
        android:id="@+id/mypageSchoolPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="학교 페이지"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/schoolpage"
        app:layout_constraintStart_toStartOf="@+id/mypagewroteRecycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mypagewroteRecycler"
        android:layout_width="329dp"
        android:layout_height="180dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/mypage_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/mypageSchoolPage"
        app:layout_constraintStart_toStartOf="@+id/mypageWrote"
        app:layout_constraintTop_toTopOf="@+id/mypageWrote"
        app:layout_constraintVertical_bias="0.21" />

    <ImageButton
        android:id="@+id/smartclass"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/laptop"
        app:layout_constraintBottom_toTopOf="@+id/smartclasspageView"
        app:layout_constraintEnd_toEndOf="@+id/smartclasspageView" />

    <TextView
        android:id="@+id/schoolpageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="104dp"
        android:text="종합정보시스템"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/smartclass" />

    <TextView
        android:id="@+id/smartclasspageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="스마트클래스"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/mypagewroteRecycler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mypageClassGrade"
        app:layout_constraintTop_toTopOf="@+id/schoolpageView" />

    <ImageButton
        android:id="@+id/schoolpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/school"
        app:layout_constraintBottom_toBottomOf="@+id/smartclass"
        app:layout_constraintEnd_toEndOf="@+id/schoolpageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/schoolpageView"
        app:layout_constraintTop_toTopOf="@+id/smartclass"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mypageProfilePicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/mypageClassGrade"
        app:layout_constraintEnd_toStartOf="@+id/mypageName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypageClassGrade"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>