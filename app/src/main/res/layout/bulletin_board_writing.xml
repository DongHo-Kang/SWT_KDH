<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.sharing.SharingWriting"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/vector"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/bulletinBoardWritingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="-100dp"
        android:gravity="center"
        android:text="자유게시판 글쓰기"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:text="제목"
        android:layout_marginLeft="-380dp"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/writingTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/writing"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="글쓰기"
        android:layout_marginLeft="-347dp"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/writingContent"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="-54dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@id/imageView"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle22" />

    <ImageButton
        android:id="@+id/attachImageFileButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-350dp"
        android:layout_marginTop="650dp"
        android:background="#00ff0000"
        android:src="@drawable/camera"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/attachFileButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="650dp"
        android:background="#00ff0000"
        android:src="@drawable/attach"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="210dp"
        android:background="#00ff0000"
        android:textColor="#000000"/>

</LinearLayout>